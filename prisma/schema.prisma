generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum SessionSource {
  CHAT
  VOICE
}

enum ReportStatus {
  SENT
  FAILED
}

model Student {
  /// Student accounts live in their own table to avoid role collisions with teachers.
  id           String   @id @default(uuid())
  mssv         String   @unique
  fullName     String
  dateOfBirth  DateTime
  email        String   @unique
  parentEmail  String
  advisorCode  String?
  className    String?
  department   String?
  passwordHash String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  teacher   Teacher?              @relation("TeacherStudents", fields: [advisorCode], references: [mssv])
  sessions  SessionLog[]
  summaries DailyEmotionSummary[]
  reports   ParentReport[]

  @@map("students")
}

model Teacher {
  /// Teacher accounts also use a dedicated table so auth and profile data remain isolated.
  id           String   @id @default(uuid())
  mssv         String   @unique
  fullName     String
  dateOfBirth  DateTime
  email        String   @unique
  department   String?
  className    String?
  passwordHash String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  students Student[] @relation("TeacherStudents")

  @@map("teachers")
}

model SessionLog {
  id             String        @id @default(uuid())
  studentId      String
  timestamp      DateTime      @default(now())
  source         SessionSource
  userMessage    String?
  botReply       String?
  sentimentScore Float
  emotionLabel   String
  faceEmotion    String?
  meta           Json?

  student Student @relation(fields: [studentId], references: [id])
}

model DailyEmotionSummary {
  id               String   @id @default(uuid())
  studentId        String
  date             DateTime
  avgEmotionScore  Float
  positiveRatio    Float
  negativeRatio    Float
  stressAlertCount Int
  alertLevel       String

  student Student @relation(fields: [studentId], references: [id])
}

model ParentReport {
  id             String   @id @default(uuid())
  studentId      String
  fromDate       DateTime
  toDate         DateTime
  sentAt         DateTime @default(now())
  contentSummary String
  emailStatus    ReportStatus

  student Student @relation(fields: [studentId], references: [id])
}
